<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anadol.rememberwords">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="com.anadol.rememberwords.model.MyContentProvider"
            android:authorities="ru.anadolstudio.mindplace"
            android:exported="false"/>

        <activity android:name=".view.Activities.StartActivity"
            android:theme="@style/SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.Activities.MainActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".view.Activities.GroupDetailActivity"
            android:theme="@style/ThemeNoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:launchMode="singleTop"
            >
            <!--android:parentActivityName=".view.Activities.MainActivity"-->
        </activity>

        <activity
            android:name=".activities.LearnStartActivity"
            android:parentActivityName=".view.Activities.GroupDetailActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
        </activity>

        <activity
            android:name=".activities.LearnDetailActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>

    </application>

</manifest>