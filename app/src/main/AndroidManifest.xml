<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anadol.rememberwords">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.GroupListActivity"
        android:windowSoftInputMode="adjustPan">
            <!--            android:screenOrientation="portrait">-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name=".activities.GroupDetailActivity"
            android:parentActivityName=".activities.GroupListActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.CreateGroupActivity"
            android:parentActivityName=".activities.GroupListActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"></activity>
        <activity
            android:name=".activities.LearnStartActivity"
            android:parentActivityName=".activities.GroupDetailActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name=".activities.LearnDetailActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".activities.SettingActivity"
            android:parentActivityName=".activities.GroupListActivity"
            android:windowSoftInputMode="stateHidden"></activity>

    </application>

</manifest>