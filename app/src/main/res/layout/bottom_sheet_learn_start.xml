<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/title_textView"
            style="@style/TitleTextAppearance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            tools:text="Tools.Name">

        </TextView>

        <ImageButton
            android:id="@+id/cancel_button"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/type"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:scrollbarFadeDuration="1"
                android:scrollbarSize="4dp"
                android:clipToPadding="false">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/type_test"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:singleLine="true"
                    app:singleSelection="true"
                    android:layout_marginBottom="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/quiz_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiz" />

                 <!--   <com.google.android.material.chip.Chip
                        android:id="@+id/trueOrFalse_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="True/False" />-->

                    <com.google.android.material.chip.Chip
                        android:id="@+id/answerQuestion_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer/Question" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/puzzle_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puzzle" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/route"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/route_test"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/forward_chip"
                    style="@style/MyChipStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/forward" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/inverse_chip"
                    style="@style/MyChipStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inverse" />


            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/object"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18sp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:scrollbarFadeDuration="1"
                android:scrollbarSize="4dp"
                android:clipToPadding="false">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/object_test"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:singleLine="true"
                    app:singleSelection="true"
                    android:layout_marginBottom="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/all_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:visibility="gone"/>

                    <!--                    <com.google.android.material.chip.Chip-->
                    <!--                        android:id="@+id/selected_chip"-->
                    <!--                        style="@style/MyChipStyle"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Selected" />-->

                    <com.google.android.material.chip.Chip
                        android:id="@+id/random_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Random" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/diapason_chip"
                        style="@style/MyChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diapason" />


                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <EditText
                android:id="@+id/count_word_edit_text"
                style="@style/EditTextStyle.EditTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/_0"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_to_learn_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/start" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>