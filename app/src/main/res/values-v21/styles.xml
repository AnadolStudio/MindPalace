<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyCardView" parent="CardView">
        <item name="android:minHeight">150dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:stateListAnimator">@animator/item_group_list</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDefaultBackground</item>
        <!--        <item name="android:fontFamily">serif</item>-->
        <item name="editTextStyle">@style/MyEditText</item>

        <item name="android:windowActivityTransitions">true</item>
<!--        <item name="android:windowEnterTransition">@android:transition/explode</item>-->
<!--        <item name="android:windowExitTransition">@android:transition/explode</item>-->

        <item name="android:windowSharedElementEnterTransition">@transition/shared_elements</item>
        <item name="android:windowSharedElementExitTransition">@transition/shared_elements</item>
    </style>

</resources>
