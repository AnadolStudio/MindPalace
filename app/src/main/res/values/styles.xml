<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDefaultBackground</item>
<!--        <item name="android:fontFamily">serif</item>-->
        <item name="editTextStyle">@style/MyEditText</item>

    </style>

    <style name="SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">serif</item>-->
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorDarkWhite</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="MyEditText.GroupDetailEditText">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center|top</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/detail_fragment_edit_text_hint</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="MyCardView" parent="CardView">
        <item name="android:minHeight">150dp</item>
        <item name="android:radius">5dp</item>
    </style>








    <style name="AppTheme.Skid_1" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false</item>

    </style>
    <style name="AppTheme.Skid_2" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">@transition/enter_share_element_transfrom_skid_2</item>
    </style>

</resources>
