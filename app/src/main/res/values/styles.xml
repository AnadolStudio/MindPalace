<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_activity</item>
    </style>

    <!--TODO: Theme.MaterialComponents.Light.DarkActionBar-->
    <style name="AppThemeDefault" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>

        <item name="android:windowBackground">@color/colorDefaultBackground</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
    </style>

    <style name="ThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>

        <item name="android:windowBackground">@color/colorDefaultBackground</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
    </style>

    <style name="AppTheme" parent="AppThemeDefault" />

    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored"></style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorDarkWhite</item>
    </style>


    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">serif</item>
        <!--        <item name="android:background">@color/colorAccent</item>-->
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">serif</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="EditTextStyle.GroupDetailNameEditText">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|top</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/group_detail_edit_text_hint</item>
    </style>

    <style name="EditTextStyle.GroupDetailWords">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="EditTextStyle.EditTextNumber">
        <item name="android:digits">-0123456789</item>
        <item name="android:numeric">integer</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="MyCardView" parent="CardView">
        <item name="android:minHeight">150dp</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="SpinnerStyle" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:entries">@array/start_type</item>
        <item name="android:gravity">fill</item>
        <item name="android:foreground">@drawable/spinner_foreground</item>
    </style>

    <style name="AppTheme.Skid_2" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @transition/enter_share_element_transfrom_skid_2
        </item>
    </style>

</resources>
