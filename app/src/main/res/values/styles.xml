    <style name="BottomSheetModalTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <!--        <item name="chipStyle">w</item>-->
    </style>

    <style name="BottomSheetModalTheme.Result">
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Result</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="behavior_peekHeight">500dp</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="BottomSheetStyle.Result">
        <item name="behavior_peekHeight">56dp</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceActive">@style/NavigationAppearance</item>
        <item name="itemTextAppearanceInactive">@style/NavigationAppearance</item>
    </style>

    <style name="NavigationAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">serif</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextViewStyle.WordListPreview">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextViewStyle.PreviewWord">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextViewStyle.ResultItem">
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SimpleSecondaryText" parent="TextViewStyle">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:shadowColor">@color/colorSecondaryTextShadow</item>
    </style>

    <style name="SimpleSecondaryText.SecondaryText">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Information" parent="TextViewStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingsTextView" parent="TextViewStyle">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="Information.HeaderText">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Information.BodyText">
        <item name="android:textSize">@dimen/text_body</item>
    </style>
    <style name="Information.AccentBodyText">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="TextViewStyle.StatisticText">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:shadowColor">@color/colorSecondaryTextShadow</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="TextViewStyle.QuestionText">
        <item name="android:textSize">@dimen/text_title</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorWhite</item>

        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@color/scrollBarThumbLight</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbars">vertical</item>

        <item name="android:shadowColor">@color/colorDarkWhite</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TitleTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">serif</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="EditTextStyle.GroupDetailWords">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:imeOptions">actionDone|flagNoFullscreen</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle.EditTextNumber">
        <item name="android:digits">-0123456789</item>
        <item name="android:numeric">integer</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:longClickable">false</item>
        <item name="android:lines">1</item>
    </style>

    <style name="StatisticCardView" parent="CardView">
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="cardCornerRadius">@dimen/radius16</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="SettingsCardView" parent="CardView">
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="cardCornerRadius">@dimen/radius16</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
    </style>

<!--    <style name="ChipTheme">-->
<!--        <item name="colorPrimary">@color/colorSecondary</item>-->
<!--    </style>-->

    <style name="ColorChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/MyChipTextAppearance</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="MyChipEntry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/MyChipTextAppearance</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="MyChipAction" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/MyChipTextAppearance</item>
        <item name="chipBackgroundColor">@color/chip_action_state_background</item>
        <item name="chipMinTouchTargetSize">42dp</item>
    </style>

    <style name="MyChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/MyChipTextAppearance</item>
        <item name="chipBackgroundColor">@color/chip_state_background</item>
        <item name="chipMinTouchTargetSize">42dp</item>
    </style>

    <style name="MyChipTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LearnProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonTheme</item>
    </style>

    <style name="ButtonTheme">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
    </style>

    <style name="InputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/InputEditTextTheme</item>
    </style>

    <style name="InputEditTextTheme">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>



</resources>
